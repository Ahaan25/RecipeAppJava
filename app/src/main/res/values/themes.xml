<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeAppJava" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#31a905</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#f4984f</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#31a905</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">#f4984f</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RecipeAppJava.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecipeAppJava.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecipeAppJava.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>